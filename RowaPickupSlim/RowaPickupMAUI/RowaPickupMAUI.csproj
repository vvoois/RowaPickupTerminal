	  <MauiImage Remove="Resources\Images\splashscreen.scale-100.png" />
	  <MauiImage Remove="Resources\Images\wide_tile.scale-100.png" />
	</ItemGroup>

	<ItemGroup>
	  <None Remove="Resources\Images\appicon.altform-lightunplated_targetsize-16.png" />
	  <None Remove="Resources\Images\appicon.altform-unplated_targetsize-16.png" />
	  <None Remove="Resources\Images\appicon.scale-100.png" />
