	  <None Remove="Resources\Images\package_logo.scale-100.png" />
	  <None Remove="Resources\Images\package_logo.scale-125.png" />
	  <None Remove="Resources\Images\package_logo.scale-150.png" />
	  <None Remove="Resources\Images\package_logo.scale-200.png" />
	  <None Remove="Resources\Images\package_logo.scale-400.png" />
	  <None Remove="Resources\Images\small_tile.scale-100.png" />
	  <None Remove="Resources\Images\SplashScreen.scale-100.png" />
